@model Employee

<!-- Include Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<h2 class="mt-4 mb-4">Employee Details</h2>

<div class="mt-3">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th scope="row" class="col-sm-3">Id</th>
                <td class="col-sm-9">@Model.Id</td>
            </tr>
            <tr>
                <th scope="row" class="col-sm-3">First Name</th>
                <td class="col-sm-9">@Model.FirstName</td>
            </tr>
            <tr>
                <th scope="row" class="col-sm-3">Last Name</th>
                <td class="col-sm-9">@Model.LastName</td>
            </tr>
            <tr>
                <th scope="row" class="col-sm-3">Position</th>
                <td class="col-sm-9">@Model.Position</td>
            </tr>
        </tbody>
    </table>

    <p>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </p>
</div>

<!-- Optional: Include Bootstrap JS and Popper.js if needed -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
